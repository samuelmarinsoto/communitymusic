{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "(TASK)C/C++: File linking & compiling",
            "detail": "Compiles and links the respective .hpp/.cpp(except templates) files into a single executable",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "src/modules/c++/**.cpp",
                "src/main.cpp",
                "-o",
                "main",
                "-I/usr/include/tk",
                "-L/usr/lib/tk8.6",
                "-I/usr/include/tcl8.6",
                "-L/usr/lib/tcl8.6",
                "-L/usr/lib/x86_64-linux-gnu",
                "-ltk8.6",
                "-ltcl8.6"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}