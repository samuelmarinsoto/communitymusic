{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "(TASK)C/C++: g++ file compiling & linking",
            "detail": "Compiles and links the respective .hpp/.cpp(except templates) files into a single executable",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "src/modules/c++/**.cpp",
                "src/main.cpp",
                "-o",
                "program"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "C/C++: Run executable",
            "detail": "Runs compiling and linking tasks together",
            "type": "shell",
            "command": "./program",
            "dependsOn": "(TASK)C/C++: g++ file compiling & linking",
            "group": "build"
        },
        {
            "label": "(TASK)C/C++: Compile test.cpp",
            "detail": "Compiles and links the respective .hpp/.cpp(except templates) files into a single executable",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "src/test.cpp",
                "-o",
                "program"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
